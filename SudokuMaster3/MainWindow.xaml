<Window x:Class="SudokuMaster3.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:sudokuMaster3="clr-namespace:SudokuMaster3" 
        mc:Ignorable="d" FontFamily="Consolas" FontWeight="Bold" Title="Sudoku Master 3">
    <Window.Resources>
        <!-- Having CommandParameter is crucial here -->
        <ContextMenu x:Key="contextMenu1">
            <MenuItem Header="1" Click="Button_Click" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
            <MenuItem Header="2" Click="Button_Click" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
            <MenuItem Header="3" Click="Button_Click" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
            <MenuItem Header="4" Click="Button_Click" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
            <MenuItem Header="5" Click="Button_Click" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
            <MenuItem Header="6" Click="Button_Click" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
            <MenuItem Header="7" Click="Button_Click" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
            <MenuItem Header="8" Click="Button_Click" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
            <MenuItem Header="9" Click="Button_Click" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
            <Separator />
            <MenuItem Header="Erase" Click="Button_Click" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
        </ContextMenu>
    </Window.Resources>
    <Grid ShowGridLines="False" Margin="0">
        <DockPanel x:Name="dockPanel1" LastChildFill="False">
            <Menu x:Name="mainMenu" DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" x:Name="menuOpen" Click="MenuOpen_OnClick" />
                    <MenuItem Header="_Save" x:Name="menuSave" />
                    <Separator />
                    <MenuItem Header="E_xit" x:Name="menuExit" Click="MenuExit_OnClick" />
                </MenuItem>
                <MenuItem Header="_Tools">
                    <MenuItem Header="Show _Markups" x:Name="menuMarkups"></MenuItem>
                    <MenuItem Header="Show _Candidates" x:Name="menuCandidates"></MenuItem>
                    <Separator />
                    <MenuItem Header="Clear _Text" x:Name="menuClearText" Click="MenuClearText_OnClick" />
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_Help">
                        <MenuItem Header="_About"></MenuItem>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <UniformGrid x:Name="PuzzleGrid" HorizontalAlignment="Left" Height="288" Width="288" Columns="9" Rows="9" Margin="20,-280,0,0" />
        <UniformGrid Background="Lime" HorizontalAlignment="Left" Margin="328,-280,0,0" Height="288">
            <Border BorderThickness="1" BorderBrush="Black">
                <TextBlock Background="LightYellow" x:Name="textBlock1" FontFamily="Consolas" VerticalAlignment="Top" TextWrapping="Wrap" Padding="20" Height="288" Width="688" />
            </Border>
        </UniformGrid>
    </Grid>
</Window>
